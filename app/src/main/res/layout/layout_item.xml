<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginVertical="7dp"
    android:background="@drawable/rounded_rectangle_background"
    android:backgroundTint="#7FE4EBF0">

    <ImageView
        android:id="@+id/yak_iv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/circle_background"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tak_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dia" />

    <TextView
        android:id="@+id/tak_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="제품명"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/yak_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yak_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품코드"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/yak_vendor_text"
        app:layout_constraintStart_toStartOf="@id/tak_name_text"
        app:layout_constraintTop_toBottomOf="@+id/tak_name_text" />

    <TextView
        android:id="@+id/yak_vendor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="제조사/수입사"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tak_name_text" />

    <TextView
        android:id="@+id/yak_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="타이레놀"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/yak_vendor_tv"
        app:layout_constraintTop_toTopOf="@id/tak_name_text" />

    <TextView
        android:id="@+id/yak_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="N02BE01"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/yak_vendor_tv"
        app:layout_constraintTop_toTopOf="@+id/yak_code_text" />

    <TextView
        android:id="@+id/yak_vendor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="한국존슨앤드존슨"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toEndOf="@+id/yak_vendor_text"
        app:layout_constraintTop_toTopOf="@+id/yak_vendor_text" />
</androidx.constraintlayout.widget.ConstraintLayout>