<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 🔎 Android 11+ 패키지 가시성: 카카오톡 설치 여부 확인 -->
    <queries>
        <package android:name="com.kakao.talk" />
    </queries>

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.YakBangApp"
        tools:targetApi="31">

        <!-- ✅ Kakao SDK 앱키: (직접 KakaoSdk.init() 호출 중이어도 유지 가능) -->
        <!-- 보안상 실제 배포 시에는 strings.xml 로 분리 권장 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="b5179c6395c6c6dc6dbc677be8a8a4db" />

        <!-- ✅ 런처: 로그인 액티비티 (패키지 경로는 실제 클래스에 맞춰 조정) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.YakBangApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ 카카오 인증 콜백 (SDK 내부) -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- 네이티브 앱 키를 그대로 scheme에 붙임 (모두 소문자) -->
                <!-- 예: kakaob5179c6395c6c6dc6dbc677be8a8a4db://oauth -->
                <data
                    android:scheme="kakaob5179c6395c6c6dc6dbc677be8a8a4db"
                    android:host="oauth" />
            </intent-filter>
        </activity>

        <!-- ✅ 로그인 이후 들어가는 화면들 -->
        <activity
            android:name=".SearchOptionActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".CameraSearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.mypage.MyPageActivity"
            android:exported="true" />
        <activity
            android:name=".RecognitionResultActivity"
            android:exported="true" />

        <!-- 📷 FileProvider (카메라 촬영 결과 파일 공유용) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
