<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Android 11+ 패키지 가시성 (카카오톡 설치 여부 확인) -->
    <queries>
        <package android:name="com.kakao.talk" />
    </queries>

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustResize"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.YakBangApp"
        tools:targetApi="31">

        <!-- Kakao SDK 앱키 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="b5179c6395c6c6dc6dbc677be8a8a4db" />

        <!-- 런처: 로그인 액티비티 -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.YakBangApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 카카오 인증 콜백 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="kakaob5179c6395c6c6dc6dbc677be8a8a4db"
                    android:host="oauth" />
            </intent-filter>
        </activity>

        <!-- 앱 화면들 -->
        <activity
            android:name=".SearchOptionActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".CameraSearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.mypage.MyPageActivity"
            android:exported="true" />
        <activity
            android:name=".RecognitionResultActivity"
            android:exported="true" />

        <!-- ✅ 누락되어 있던 상세 호스트 액티비티 등록 -->
        <activity
            android:name=".ui.detail.DetailHostActivity"
            android:exported="false" />

        <!-- FileProvider (카메라 촬영 결과 파일 공유용) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
