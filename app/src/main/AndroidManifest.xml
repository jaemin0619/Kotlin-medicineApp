<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yakbangapp">

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 카메라 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.YakBangApp"
        tools:targetApi="31">

        <!-- 카카오 SDK 앱 키 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="b5179c6395c6c6dc6dbc677be8a8a4db" />

        <!-- LoginActivity: 앱 시작 지점 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.YakBangApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 검색 선택 화면 (로그인 성공 후 진입) -->
        <activity
            android:name=".SearchOptionActivity"
            android:exported="true" />

        <!-- 텍스트 검색용 메인화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- 사진 촬영 검색용 화면 -->
        <activity
            android:name=".CameraSearchActivity"
            android:exported="true" />

        <!-- 복약 중인 알약 (선택사항) -->
         <activity android:name=".ui.MyMedsActivity" android:exported="true" />

    </application>
</manifest>
